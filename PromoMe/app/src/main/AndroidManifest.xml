<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nadia.com.promome" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityReturningUser"
            android:label="@string/title_activity_returning_user" >
        </activity>
        <activity
            android:name=".ActivityNewUser"
            android:label="@string/title_activity_new_user" >
        </activity>
        <activity
            android:name=".ActivityAddProduct"
            android:label="@string/title_activity_add_prodcut" >
        </activity>
        <activity
            android:name=".ActivityUNSPC"
            android:label="@string/title_activity_activity_unspc" >
        </activity>
        <activity
            android:name=".ActivityGetProducts"
            android:label="@string/title_activity_get_products" >
        </activity>
        <activity
            android:name=".ActivityAddCharacteristic"
            android:label="@string/title_activity_add_characteristic" >
        </activity>
    </application>

</manifest>
