<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain">

    <Button
        android:id="@+id/button_sensores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_sensores"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/button_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_location"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/button_acelerometro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_acelerometro"
        android:onClick="onClick"/>
    <Button
        android:id="@+id/button_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_compass"
        android:onClick="onClick"/>

</LinearLayout>
